# $dotfiles: style, v 1.0  12/06/2019 00:21:09

PRINT='echo -n'
[ `$PRINT | wc -c` -ne 0 ] && PRINT=printf
PS1='$(_prompt) '

_prompt() {
	case $? in
	# EXIT_SUCCESS or ^C
	0|130)
		RET=243
		;;
	# command not found
	127)
		RET=196
		;;
	*)
		RET=202
		;;
	esac

	RET="[38;5;${RET}m"
	RET="${RET} ÔÅî[0m"

	$PRINT $RET
}
