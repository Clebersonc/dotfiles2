#!/usr/bin/sh
#
# Browse internet offline if much faster.

webpage=/tmp/webpage.html

dmn=$(echo "$@" | cut -d'/' -f3)
printf "\n%s %s\n" "Domain:" "$dmn"
path=$(echo "$@" | cut -d'/' -f4-)
printf "\n%s %s\n" "  Path:" "$path"

printf "\n%s " "Downloading page wait..."
curl -s -L $@ > $webpage 2>/dev/null && printf "%s\n" "DONE"


tabbed -g 1050x600 -r2 surf -bdkmnpe x $webpage 2>/dev/null
