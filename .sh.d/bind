# $dotfiles: bind,v 1.0 11/06/2019 02:16

# default
bind ^L=clear-screen
bind ^K=up-history # history search for each command like fish shell.
bind ^J=down-history # history search for each command like fish shell.

# Custom
bind -m '^R=^Ureverse-history-search^O' # Custom reverse search in history.
bind -m '^[[Z=^I' # Search command pressing tab.
#bind -m '^C=^Usudo ^Y' # Add sudo to current commad.
